node {

stage("Git Clone"){

        git credentialsId: 'GIT_HUB_CREDENTIAL', url: 'https://github.com/shalinishalu0817/capstone-project.git'
    }
stage("Docker build"){
    sh 'sudo docker version'
    sh 'sudo docker build -t capstone/nginx-image:v1.1.0 .'
    sh 'sudo docker images list'
    sh 'sudo docker tag capstone/nginx-image:v1.1.0 shalinishalu0817/team-3:capstone'
    }
stage("Docker Login"){
        withCredentials([string(credentialsId: 'DOCKER_HUB_PASSWORD', variable: 'PASSWORD')]) {
            sh 'sudo docker login -u shalinishalu0817 -p $PASSWORD'
        }
    }
stage("Push Image to Docker Hub"){
        sh 'sudo docker push  shalinishalu0817/team-3:capstone'
    }
    
stage('K8S Deploy'){
       
                kubernetesDeploy(
    
                    configs: 'deployment.yaml',
                    kubeconfigId: 'K8S',
                    enableConfigSubstitution: true
                    
        )
                
        }
}
      
